mixin navbar(user)
    body.mx-auto
      nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
        a.navbar-brand(href='/') Visitor Parkade APP
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav
            li.nav-item.active.dropdown
              a.nav-link.dropdown-toggle(href='/' id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Menu 
                .dropdown-menu(aria-labelledby="navbarDropdownMenuLink")
                    if(user.isAdmin) 
                      a.dropdown-item(href="/parkade") Parkades
                    if(user.isAdmin)
                      a.dropdown-item(href="/unit") Units
                    a.dropdown-item(href="/Visitor") Add Visitor Vehicle 
                    if(user.isAdmin)
                      a.dropdown-item(href="/checkplate") Check Plate             
            li.nav-item
              a.nav-link(href='/login') Login 
            li.nav-item
              a.nav-link(href='/signup') Sign up
            li.nav-item
              a.nav-link(href='/logout') Logout
        if user.isAdmin
          p.nav.navbar-text email:#{user.email} - Admin
        else
          p.nav.navbar-text email:#{user.email} - User
      p 
    